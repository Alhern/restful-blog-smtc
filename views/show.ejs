<% include ./partials/header %>

<div class="ui main text container">
	<div class="ui centered huge header"><%= blog.title %></div>
	<div class="ui top attached">
		<div class="item">
			<img src="<%=blog.image%>" class="ui centered rounded image">
			<div class="content">
			<span><p><%= blog.created.toDateString() %></p></span>
			</div>
			<div class="description">
				<p><%= blog.body %></p>
			</div>
			<a class="mini ui green basic button" href="/blogs/<%= blog._id %>/edit">EDIT</a>
			<form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
				<button class="mini ui red basic button">DELETE</button>
			</form>
		</div>
	</div>
			
		
		
	
</div>

<% include ./partials/footer %>